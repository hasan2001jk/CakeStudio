		script.
			document.addEventListener('DOMContentLoaded', function() {
			  const firstName = document.getElementById('label-firstName');
			  const lastName = document.getElementById('label-lastName');
			  const email = document.getElementById('label-emailAddress');
			  const btn = document.querySelector('.btn_wrap');

			  firstName.addEventListener("change", function() {
				if (firstName.value !== "") {
				  console.log("Value has been changed");
				  btn.disabled=false;
				  btn.style.transition='all .3s ease-in-out';
				  btn.style.backgroundColor='black';
				} else {
				  console.log("Value has not been changed");
				}
			  });

				email.addEventListener("change", function() {
					if (email.value !== "") {
					console.log("Value has been changed");
					btn.disabled=false;
					btn.style.transition='all .3s ease-in-out';
					btn.style.backgroundColor='black';
					} else {
					console.log("Value has not been changed");
					}
			  });

			  	lastName.addEventListener("change", function() {
					if (lastName.value !== "") {
					console.log("Value has been changed");
					btn.disabled=false;
					btn.style.transition='all .3s ease-in-out';
					btn.style.backgroundColor='black';
					} else {
					console.log("Value has not been changed");
					}
			  });

			});