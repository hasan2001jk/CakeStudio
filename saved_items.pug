		script.
			const deleteButtons = document.querySelectorAll('.sec_card button.deleteButton');
			const itemsCount = document.querySelector('.itemsCount');
			function updateItemCount() {
			  itemsCount.style.transition = 'all .3s ease-in-out';
			  itemsCount.textContent = document.querySelectorAll('.sec_card').length + ' шт';
			}
			
			window.onload = updateItemCount;
			
			deleteButtons.forEach(button => {
			  button.addEventListener('click', () => {
				const card = button.closest('.sec_card');
				card.remove();
				const count = document.querySelectorAll('.sec_card').length;
				itemsCount.textContent = count + ' шт';
			  });
			});